<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_about"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="dev.saxionroosters.AboutActivity">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="32dp"
                android:background="#fff"
                android:elevation="4dp"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/textView"
                    style="@style/TextViewAppearance.Body3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="About" />

                <TextView
                    style="@style/TextViewAppearance.Body2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="This App is an experimental initiative by Saxion students Jelle ten Brinke &amp; Hugo Olthof." />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="16dp"
                android:background="#fff"
                android:elevation="4dp"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    style="@style/TextViewAppearance.Body3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Goals" />

                <TextView
                    style="@style/TextViewAppearance.Body2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="\u2022 Deliver the best Schedule app to our users." />

                <TextView
                    style="@style/TextViewAppearance.Body2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="\u2022 Learn and innovate by sharing knowledge." />

                <TextView
                    style="@style/TextViewAppearance.Body2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="\u2022 Encourage Open Source development" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="16dp"
                android:background="#fff"
                android:elevation="4dp"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    style="@style/TextViewAppearance.Body3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Achievements &amp; Press" />

                <TextView
                    style="@style/TextViewAppearance.Body2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="\u2022 2500+ downloads in the first week after launch." />

                <TextView
                    style="@style/TextViewAppearance.Body2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="\u2022 We serve an average of 1500 unique users per day with several sessions." />

                <TextView
                    style="@style/TextViewAppearance.Body2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="\u2022 Sax.nu wrote an article about our app success." />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="16dp"
                android:background="#fff"
                android:elevation="4dp"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    style="@style/TextViewAppearance.Body3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hall of Fame" />

                <TextView
                    style="@style/TextViewAppearance.Body2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="\u2022 Wessel Perik - Student" />

                <TextView
                    style="@style/TextViewAppearance.Body2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="\u2022 Niels G. - Developing Wild" />

                <TextView
                    style="@style/TextViewAppearance.Body2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="\u2022 Arjen ter Horst - Saxion" />
            </LinearLayout>


        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</LinearLayout>
