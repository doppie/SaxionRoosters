<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <android.support.v7.widget.CardView
            android:id="@+id/card_view"
            android:layout_gravity="center"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:scaleX="0.95"
            android:scaleY="0.95"
            android:alpha="0.8"
            card_view:cardCornerRadius="2dp"
            card_view:contentPaddingRight="5dp"
            card_view:contentPaddingLeft="0dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:paddingTop="10dp"
                    style="@style/TextViewAppearance.Body2"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textSize="14sp"
                    android:scaleX="0.95"
                    android:scaleY="0.95"
                    android:alpha="0.8"
                    android:text="1.2: Architectuur &amp; Infrastructuur"
                    android:layout_alignParentTop="true"/>

                <TextView
                    android:id="@+id/time"
                    style="@style/TextViewAppearance.Caption2"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="20dp"
                    android:layout_alignParentLeft="true"
                    android:scaleX="0.95"
                    android:scaleY="0.95"
                    android:alpha="0.8"
                    android:text="08:30 - 10:00"
                    android:layout_below="@+id/title"/>

                <TextView
                    android:id="@+id/room"
                    style="@style/TextViewAppearance.Body2"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:scaleX="0.95"
                    android:scaleY="0.95"
                    android:alpha="0.8"
                    android:text="W3.10"
                    android:layout_alignParentRight="true"
                    android:gravity="right"
                    android:layout_toEndOf="@+id/time"
                    android:layout_below="@+id/title"/>

                <View
                    android:id="@+id/date_color"
                    android:layout_width="15dp"
                    android:layout_height="55dp"
                    android:background="@color/white"/>

                <TextView
                    android:id="@+id/date"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:gravity="center_horizontal"
                    style="@style/TextViewAppearance.Body3"
                    android:textColor="@color/white"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textSize="12sp"
                    android:alpha="0.8"
                    android:rotation="270"
                    android:text="21-11"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>
</merge>